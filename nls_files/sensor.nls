to monitor-receiver

  ask waves with [ distance myself <= 0.5 and bounced? ]
  [
    scope-activation ( found-goal? )
  ]

end

to scope-activation [ goal-found? ]

  let range 0

  hide-turtle

  set breed scope-markers
  set shape "phosphor"

  setxy scope-x scope-y

  ifelse ( goal-found? )
  [
    set found-goal? true
    set color magenta + 1
  ]
  [
    set found-goal? false
    set color red + 1
  ]

  set heading heading + 180

  set range time * 0.5

  fd range
  
  show-turtle

end