to wave-advancement

  ask waves
  [
    set time time + resolution

    show distance antenna

    ifelse ( precision ( distance antenna ) 1 >= scope-radius  ) 
    [ die ]                                                        
    [
     fd resolution

     if ( bounce? )        
     [ wave-bounce ]
    ]
  ]

end

to-report bounce?
  
  report not bounced? and
       ( any? patches with [ pcolor != black and distance myself < 0.1 ] or [ pcolor ] of patch-here != black )
        or ( [ pxcor ] of patch-here >= max-pxcor or [ pycor ] of patch-here >= max-pycor ) or ( any? cars with [distance myself < 0.1] )
  
end

to wave-bounce

  set color yellow
  set heading heading + 180
  set shape "wave-return"
  set bounced? true

  if ( goal? )
  [ set found-goal? true ]

end